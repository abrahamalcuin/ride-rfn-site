{% doc %}
  @prompt
    I want this as a footer © October 10, 2025 KICKIN BIKES LLC
    
    But on the far right from that I want to be able to upload a photo for my logo. 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-footer-copyright-{{ ai_gen_id }} {
    display: block;
    width: 100%;
  }

  .ai-footer-copyright-container-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
    background-color: {{ block.settings.background_color }};
    gap: 20px;
    flex-wrap: wrap;
  }

  .ai-footer-copyright-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    margin: 0;
  }

  .ai-footer-copyright-logo-{{ ai_gen_id }} {
    flex-shrink: 0;
  }

  .ai-footer-copyright-logo-{{ ai_gen_id }} img {
    max-width: {{ block.settings.logo_width }}px;
    height: auto;
    display: block;
  }

  .ai-footer-copyright-logo-placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.logo_width }}px;
    height: 60px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
  }

  .ai-footer-copyright-logo-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  @media screen and (max-width: 749px) {
    .ai-footer-copyright-container-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: 16px;
    }

    .ai-footer-copyright-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

    .ai-footer-copyright-logo-{{ ai_gen_id }} img {
      max-width: {{ block.settings.logo_width | times: 0.8 }}px;
    }

    .ai-footer-copyright-logo-placeholder-{{ ai_gen_id }} {
      width: {{ block.settings.logo_width | times: 0.8 }}px;
    }
  }
{% endstyle %}

<footer-copyright-{{ ai_gen_id }} class="ai-footer-copyright-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-footer-copyright-container-{{ ai_gen_id }}">
    <p class="ai-footer-copyright-text-{{ ai_gen_id }}">
      {{ block.settings.copyright_text }}
    </p>

    <div class="ai-footer-copyright-logo-{{ ai_gen_id }}">
      {% if block.settings.logo %}
        <img
          src="{{ block.settings.logo | image_url: width: 400 }}"
          alt="{{ block.settings.logo.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.logo.width }}"
          height="{{ block.settings.logo.height }}"
        >
      {% else %}
        <div class="ai-footer-copyright-logo-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {% endif %}
    </div>
  </div>
</footer-copyright-{{ ai_gen_id }}>

<script>
  (function() {
    class FooterCopyright{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }
    }

    customElements.define('footer-copyright-{{ ai_gen_id }}', FooterCopyright{{ ai_gen_id }});
  })();
</script>

{% schema %}
{
  "name": "Footer copyright",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Copyright text"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright text",
      "default": "© October 10, 2025 KICKIN BIKES LLC"
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 10,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Text size",
      "default": 14
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Logo"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 300,
      "step": 10,
      "unit": "px",
      "label": "Logo width",
      "default": 100
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#1f1f21"
    },
    {
      "type": "range",
      "id": "padding_vertical",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Vertical padding",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_horizontal",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Horizontal padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "desktop_width_percent",
      "label": "Desktop width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    }
  ],
  "presets": [
    {
      "name": "Footer copyright"
    }
  ]
}
{% endschema %}
