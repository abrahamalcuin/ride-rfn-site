{% doc %}
  @prompt
    Create a search bar section for collection pages that allows customers to search and filter products within the current collection. The search should work in real-time and match the dark, modern theme aesthetic with clean styling.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-search-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    margin: 0 auto;
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-collection-search__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-collection-search__input-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
  }

  .ai-collection-search__input-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.input_padding }}px {{ block.settings.input_padding }}px {{ block.settings.input_padding }}px {{ block.settings.input_padding | plus: 40 }}px;
    background-color: {{ block.settings.input_background }};
    color: {{ block.settings.input_text_color }};
    border: {{ block.settings.input_border_width }}px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    font-size: {{ block.settings.input_font_size }}px;
    outline: none;
    transition: border-color 0.3s ease;
  }

  .ai-collection-search__input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.placeholder_color }};
    opacity: 0.7;
  }

  .ai-collection-search__input-{{ ai_gen_id }}:focus {
    border-color: {{ block.settings.input_focus_border_color }};
  }

  .ai-collection-search__icon-{{ ai_gen_id }} {
    position: absolute;
    left: {{ block.settings.input_padding }}px;
    top: 50%;
    transform: translateY(-50%);
    width: 20px;
    height: 20px;
    color: {{ block.settings.icon_color }};
    pointer-events: none;
  }

  .ai-collection-search__clear-{{ ai_gen_id }} {
    position: absolute;
    right: {{ block.settings.input_padding }}px;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    padding: 4px;
    cursor: pointer;
    color: {{ block.settings.icon_color }};
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }

  .ai-collection-search__clear-{{ ai_gen_id }}.active {
    opacity: 0.7;
    visibility: visible;
  }

  .ai-collection-search__clear-{{ ai_gen_id }}:hover {
    opacity: 1;
  }

  .ai-collection-search__results-{{ ai_gen_id }} {
    margin-top: {{ block.settings.results_spacing }}px;
  }

  .ai-collection-search__count-{{ ai_gen_id }} {
    color: {{ block.settings.count_text_color }};
    font-size: {{ block.settings.count_font_size }}px;
    margin-bottom: 16px;
  }

  .ai-collection-search__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-collection-search__product-{{ ai_gen_id }} {
    opacity: 1;
    transition: opacity 0.3s ease;
  }

  .ai-collection-search__product-{{ ai_gen_id }}.hidden {
    display: none;
  }

  .ai-collection-search__product-link-{{ ai_gen_id }} {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .ai-collection-search__product-image-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    background-color: {{ block.settings.image_background }};
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
    margin-bottom: 12px;
  }

  .ai-collection-search__product-image-{{ ai_gen_id }} img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-collection-search__product-title-{{ ai_gen_id }} {
    color: {{ block.settings.product_title_color }};
    font-size: {{ block.settings.product_title_size }}px;
    margin: 0 0 8px;
    font-weight: 500;
  }

  .ai-collection-search__product-price-{{ ai_gen_id }} {
    color: {{ block.settings.product_price_color }};
    font-size: {{ block.settings.product_price_size }}px;
  }

  .ai-collection-search__no-results-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: {{ block.settings.no_results_color }};
    font-size: {{ block.settings.no_results_size }}px;
    display: none;
  }

  .ai-collection-search__no-results-{{ ai_gen_id }}.active {
    display: block;
  }

  @media screen and (max-width: 989px) {
    .ai-collection-search__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-collection-search__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-collection-search-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_vertical | times: 0.7 }}px {{ block.settings.padding_horizontal | times: 0.7 }}px;
    }
  }
{% endstyle %}

<collection-search-{{ ai_gen_id }} class="ai-collection-search-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-collection-search__container-{{ ai_gen_id }}">
    <div class="ai-collection-search__input-wrapper-{{ ai_gen_id }}">
      <svg class="ai-collection-search__icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="11" cy="11" r="8"></circle>
        <path d="m21 21-4.35-4.35"></path>
      </svg>
      <input
        type="text"
        class="ai-collection-search__input-{{ ai_gen_id }}"
        placeholder="{{ block.settings.placeholder_text }}"
        aria-label="Search products in this collection"
      >
      <button
        type="button"
        class="ai-collection-search__clear-{{ ai_gen_id }}"
        aria-label="Clear search"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>

    <div class="ai-collection-search__results-{{ ai_gen_id }}">
      <div class="ai-collection-search__count-{{ ai_gen_id }}">
        <span class="ai-collection-search__count-number-{{ ai_gen_id }}">{{ collection.products.size }}</span> {{ block.settings.results_text }}
      </div>

      <div class="ai-collection-search__grid-{{ ai_gen_id }}">
        {% for product in collection.products %}
          <div
            class="ai-collection-search__product-{{ ai_gen_id }}"
            data-product-title="{{ product.title | downcase }}"
            data-product-type="{{ product.type | downcase }}"
            data-product-vendor="{{ product.vendor | downcase }}"
            data-product-tags="{{ product.tags | join: ',' | downcase }}"
          >
            <a href="{{ product.url }}" class="ai-collection-search__product-link-{{ ai_gen_id }}">
              <div class="ai-collection-search__product-image-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    loading="lazy"
                    width="600"
                    height="600"
                  >
                {% else %}
                  <div class="ai-collection-search__product-placeholder-{{ ai_gen_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>
              <h3 class="ai-collection-search__product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
              <div class="ai-collection-search__product-price-{{ ai_gen_id }}">
                {{ product.price | money }}
              </div>
            </a>
          </div>
        {% endfor %}
      </div>

      <div class="ai-collection-search__no-results-{{ ai_gen_id }}">
        {{ block.settings.no_results_text }}
      </div>
    </div>
  </div>
</collection-search-{{ ai_gen_id }}>

<script>
  (function() {
    class CollectionSearch{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.input = this.querySelector('.ai-collection-search__input-{{ ai_gen_id }}');
        this.clearButton = this.querySelector('.ai-collection-search__clear-{{ ai_gen_id }}');
        this.products = this.querySelectorAll('.ai-collection-search__product-{{ ai_gen_id }}');
        this.countNumber = this.querySelector('.ai-collection-search__count-number-{{ ai_gen_id }}');
        this.noResults = this.querySelector('.ai-collection-search__no-results-{{ ai_gen_id }}');
        this.totalProducts = this.products.length;
      }

      connectedCallback() {
        this.input.addEventListener('input', this.handleSearch.bind(this));
        this.clearButton.addEventListener('click', this.handleClear.bind(this));
      }

      handleSearch(event) {
        const searchTerm = event.target.value.toLowerCase().trim();
        
        if (searchTerm.length > 0) {
          this.clearButton.classList.add('active');
        } else {
          this.clearButton.classList.remove('active');
        }

        let visibleCount = 0;

        this.products.forEach(product => {
          const title = product.dataset.productTitle;
          const type = product.dataset.productType;
          const vendor = product.dataset.productVendor;
          const tags = product.dataset.productTags;

          const matches = 
            title.includes(searchTerm) ||
            type.includes(searchTerm) ||
            vendor.includes(searchTerm) ||
            tags.includes(searchTerm);

          if (matches || searchTerm === '') {
            product.classList.remove('hidden');
            visibleCount++;
          } else {
            product.classList.add('hidden');
          }
        });

        this.countNumber.textContent = visibleCount;

        if (visibleCount === 0 && searchTerm.length > 0) {
          this.noResults.classList.add('active');
        } else {
          this.noResults.classList.remove('active');
        }
      }

      handleClear() {
        this.input.value = '';
        this.clearButton.classList.remove('active');
        this.products.forEach(product => {
          product.classList.remove('hidden');
        });
        this.countNumber.textContent = this.totalProducts;
        this.noResults.classList.remove('active');
        this.input.focus();
      }
    }

    customElements.define('collection-search-{{ ai_gen_id }}', CollectionSearch{{ ai_gen_id }});
  })();
</script>

