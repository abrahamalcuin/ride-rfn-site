{% doc %}
  @prompt
    a carosel with 5 images and text overlay on the right hand side of each slide.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-carousel-container-{{ ai_gen_id }} {
    position: relative;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    overflow: hidden;
    display: block;
  }

  .ai-carousel-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.carousel_height }}px;
  }

  .ai-carousel-slides-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .ai-carousel-slide-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.6s ease, visibility 0.6s ease;
  }

  .ai-carousel-slide-{{ ai_gen_id }}.active {
    opacity: 1;
    visibility: visible;
    z-index: 1;
  }

  .ai-carousel-slide-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-carousel-slide-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #1f1f21;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-carousel-slide-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
    opacity: 0.3;
  }

  .ai-carousel-text-overlay-{{ ai_gen_id }} {
    position: absolute;
    right: {{ block.settings.text_horizontal_position }}%;
    top: 50%;
    transform: translateY(-50%);
    background-color: {{ block.settings.overlay_background }};
    padding: {{ block.settings.overlay_padding }}px;
    max-width: {{ block.settings.overlay_max_width }}px;
    z-index: 2;
    border-radius: {{ block.settings.overlay_border_radius }}px;
  }

  .ai-carousel-text-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 {{ block.settings.text_spacing }}px 0;
    line-height: 1.2;
  }

  .ai-carousel-text-description-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    margin: 0;
    line-height: 1.5;
  }

  .ai-carousel-navigation-{{ ai_gen_id }} {
    position: absolute;
    bottom: {{ block.settings.nav_bottom_position }}px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 12px;
    z-index: 3;
  }

  .ai-carousel-nav-button-{{ ai_gen_id }} {
    width: {{ block.settings.nav_dot_size }}px;
    height: {{ block.settings.nav_dot_size }}px;
    border-radius: 50%;
    background-color: {{ block.settings.nav_inactive_color }};
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.3s ease;
    padding: 0;
  }

  .ai-carousel-nav-button-{{ ai_gen_id }}:hover {
    transform: scale(1.2);
  }

  .ai-carousel-nav-button-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.nav_active_color }};
  }

  .ai-carousel-arrow-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: {{ block.settings.arrow_background }};
    border: none;
    width: {{ block.settings.arrow_size }}px;
    height: {{ block.settings.arrow_size }}px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 3;
    transition: background-color 0.3s ease, transform 0.3s ease;
  }

  .ai-carousel-arrow-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.arrow_hover_background }};
    transform: translateY(-50%) scale(1.1);
  }

  .ai-carousel-arrow-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    fill: {{ block.settings.arrow_color }};
  }

  .ai-carousel-arrow-prev-{{ ai_gen_id }} {
    left: {{ block.settings.arrow_horizontal_position }}px;
  }

  .ai-carousel-arrow-next-{{ ai_gen_id }} {
    right: {{ block.settings.arrow_horizontal_position }}px;
  }

  @media screen and (max-width: 749px) {
    .ai-carousel-wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.carousel_height | times: 0.6 }}px;
    }

    .ai-carousel-text-overlay-{{ ai_gen_id }} {
      right: 5%;
      max-width: 80%;
      padding: {{ block.settings.overlay_padding | times: 0.7 }}px;
    }

    .ai-carousel-text-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-carousel-text-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.8 }}px;
    }

    .ai-carousel-arrow-{{ ai_gen_id }} {
      width: {{ block.settings.arrow_size | times: 0.8 }}px;
      height: {{ block.settings.arrow_size | times: 0.8 }}px;
    }

    .ai-carousel-arrow-prev-{{ ai_gen_id }} {
      left: {{ block.settings.arrow_horizontal_position | times: 0.5 }}px;
    }

    .ai-carousel-arrow-next-{{ ai_gen_id }} {
      right: {{ block.settings.arrow_horizontal_position | times: 0.5 }}px;
    }
  }
{% endstyle %}

<image-carousel-{{ ai_gen_id }}
  class="ai-carousel-container-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
  data-autoplay="{{ block.settings.autoplay }}"
  data-autoplay-speed="{{ block.settings.autoplay_speed }}"
>
  <div class="ai-carousel-wrapper-{{ ai_gen_id }}">
    <div class="ai-carousel-slides-{{ ai_gen_id }}">
      {% for i in (1..5) %}
        {% liquid
          assign image_key = 'slide_' | append: i | append: '_image'
          assign heading_key = 'slide_' | append: i | append: '_heading'
          assign text_key = 'slide_' | append: i | append: '_text'

          assign slide_image = block.settings[image_key]
          assign slide_heading = block.settings[heading_key]
          assign slide_text = block.settings[text_key]
        %}

        <div
          class="ai-carousel-slide-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
          data-slide="{{ forloop.index }}"
        >
          {% if slide_image %}
            <img
              src="{{ slide_image | image_url: width: 2000 }}"
              alt="{{ slide_image.alt | escape }}"
              loading="lazy"
              width="{{ slide_image.width }}"
              height="{{ slide_image.height }}"
              class="ai-carousel-slide-image-{{ ai_gen_id }}"
            >
          {% else %}
            <div class="ai-carousel-slide-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}

          {% if slide_heading != blank or slide_text != blank %}
            <div class="ai-carousel-text-overlay-{{ ai_gen_id }}">
              {% if slide_heading != blank %}
                <h2 class="ai-carousel-text-heading-{{ ai_gen_id }}">{{ slide_heading }}</h2>
              {% endif %}
              {% if slide_text != blank %}
                <div class="ai-carousel-text-description-{{ ai_gen_id }}">{{ slide_text }}</div>
              {% endif %}
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>

    {% if block.settings.show_arrows %}
      <button
        class="ai-carousel-arrow-{{ ai_gen_id }} ai-carousel-arrow-prev-{{ ai_gen_id }}"
        aria-label="Previous slide"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
          <path d="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"/>
        </svg>
      </button>
      <button
        class="ai-carousel-arrow-{{ ai_gen_id }} ai-carousel-arrow-next-{{ ai_gen_id }}"
        aria-label="Next slide"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
          <path d="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"/>
        </svg>
      </button>
    {% endif %}

    {% if block.settings.show_navigation %}
      <div class="ai-carousel-navigation-{{ ai_gen_id }}">
        {% for i in (1..5) %}
          <button
            class="ai-carousel-nav-button-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
            data-slide="{{ forloop.index }}"
            aria-label="Go to slide {{ forloop.index }}"
          ></button>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</image-carousel-{{ ai_gen_id }}>

<script>
  (function() {
    class ImageCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 1;
        this.totalSlides = 5;
        this.autoplayInterval = null;
      }

      connectedCallback() {
        this.slides = this.querySelectorAll('.ai-carousel-slide-{{ ai_gen_id }}');
        this.navButtons = this.querySelectorAll('.ai-carousel-nav-button-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-carousel-arrow-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-carousel-arrow-next-{{ ai_gen_id }}');

        this.setupEventListeners();
        this.setupAutoplay();
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.previousSlide());
        }

        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.nextSlide());
        }

        this.navButtons.forEach((button) => {
          button.addEventListener('click', (e) => {
            const slideNumber = parseInt(e.target.dataset.slide);
            this.goToSlide(slideNumber);
          });
        });

        this.addEventListener('mouseenter', () => this.pauseAutoplay());
        this.addEventListener('mouseleave', () => this.resumeAutoplay());
      }

      setupAutoplay() {
        const autoplay = this.dataset.autoplay === 'true';
        const speed = parseInt(this.dataset.autoplaySpeed) * 1000;

        if (autoplay) {
          this.autoplayInterval = setInterval(() => {
            this.nextSlide();
          }, speed);
        }
      }

      pauseAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
        }
      }

      resumeAutoplay() {
        const autoplay = this.dataset.autoplay === 'true';
        const speed = parseInt(this.dataset.autoplaySpeed) * 1000;

        if (autoplay) {
          this.autoplayInterval = setInterval(() => {
            this.nextSlide();
          }, speed);
        }
      }

      goToSlide(slideNumber) {
        this.currentSlide = slideNumber;

        this.slides.forEach((slide, index) => {
          if (index + 1 === slideNumber) {
            slide.classList.add('active');
          } else {
            slide.classList.remove('active');
          }
        });

        this.navButtons.forEach((button, index) => {
          if (index + 1 === slideNumber) {
            button.classList.add('active');
          } else {
            button.classList.remove('active');
          }
        });
      }

      nextSlide() {
        this.currentSlide = this.currentSlide >= this.totalSlides ? 1 : this.currentSlide + 1;
        this.goToSlide(this.currentSlide);
      }

      previousSlide() {
        this.currentSlide = this.currentSlide <= 1 ? this.totalSlides : this.currentSlide - 1;
        this.goToSlide(this.currentSlide);
      }

      disconnectedCallback() {
        this.pauseAutoplay();
      }
    }

    customElements.define('image-carousel-{{ ai_gen_id }}', ImageCarousel{{ ai_gen_id }});
  })();
</script>

