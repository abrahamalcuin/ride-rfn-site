{% doc %}
  @prompt
    carousel with 6 slides where there's an image on the left and text on the right
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-carousel-container-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    position: relative;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding }}px;
  }

  .ai-carousel-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
  }

  .ai-carousel-slides-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s ease-in-out;
    width: 100%;
  }

  .ai-carousel-slide-{{ ai_gen_id }} {
    min-width: 100%;
    display: flex;
    gap: {{ block.settings.content_gap }}px;
    align-items: center;
  }

  .ai-carousel-image-{{ ai_gen_id }} {
    flex: 0 0 {{ block.settings.image_width }}%;
    max-width: {{ block.settings.image_width }}%;
  }

  .ai-carousel-image-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-carousel-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 4 / 3;
    background-color: #2a2a2c;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-carousel-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-carousel-content-{{ ai_gen_id }} {
    flex: 1;
    color: {{ block.settings.text_color }};
  }

  .ai-carousel-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 {{ block.settings.text_spacing }}px;
    color: {{ block.settings.heading_color }};
    font-weight: 600;
  }

  .ai-carousel-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
    margin: 0;
  }

  .ai-carousel-controls-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin-top: {{ block.settings.controls_spacing }}px;
  }

  .ai-carousel-button-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    width: 44px;
    height: 44px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease;
  }

  .ai-carousel-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-carousel-button-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
  }

  .ai-carousel-dots-{{ ai_gen_id }} {
    display: flex;
    gap: 10px;
  }

  .ai-carousel-dot-{{ ai_gen_id }} {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    border: none;
    cursor: pointer;
    padding: 0;
    transition: background-color 0.3s ease, transform 0.3s ease;
  }

  .ai-carousel-dot-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.dot_active_color }};
    transform: scale(1.2);
  }

  @media screen and (max-width: 749px) {
    .ai-carousel-slide-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-carousel-image-{{ ai_gen_id }} {
      flex: 0 0 100%;
      max-width: 100%;
    }

    .ai-carousel-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }

    .ai-carousel-text-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.text_size }}px * 0.9);
    }
  }
{% endstyle %}

<image-text-carousel-{{ ai_gen_id }}
  class="ai-carousel-container-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-carousel-wrapper-{{ ai_gen_id }}">
    <div class="ai-carousel-slides-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        {% liquid
          assign image_key = 'slide_' | append: i | append: '_image'
          assign heading_key = 'slide_' | append: i | append: '_heading'
          assign text_key = 'slide_' | append: i | append: '_text'
          
          assign slide_image = block.settings[image_key]
          assign slide_heading = block.settings[heading_key]
          assign slide_text = block.settings[text_key]
        %}
        
        <div class="ai-carousel-slide-{{ ai_gen_id }}" data-slide="{{ i }}">
          <div class="ai-carousel-image-{{ ai_gen_id }}">
            {% if slide_image %}
              <img
                src="{{ slide_image | image_url: width: 1000 }}"
                alt="{{ slide_image.alt | escape }}"
                loading="lazy"
                width="{{ slide_image.width }}"
                height="{{ slide_image.height }}"
              >
            {% else %}
              <div class="ai-carousel-image-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
          
          <div class="ai-carousel-content-{{ ai_gen_id }}">
            {% if slide_heading != blank %}
              <h3 class="ai-carousel-heading-{{ ai_gen_id }}">{{ slide_heading }}</h3>
            {% endif %}
            {% if slide_text != blank %}
              <div class="ai-carousel-text-{{ ai_gen_id }}">{{ slide_text }}</div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>

  <div class="ai-carousel-controls-{{ ai_gen_id }}">
    <button
      class="ai-carousel-button-{{ ai_gen_id }} ai-carousel-prev-{{ ai_gen_id }}"
      aria-label="Previous slide"
    >
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="15 18 9 12 15 6"></polyline>
      </svg>
    </button>

    <div class="ai-carousel-dots-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        <button
          class="ai-carousel-dot-{{ ai_gen_id }} {% if i == 1 %}active{% endif %}"
          data-slide="{{ i }}"
          aria-label="Go to slide {{ i }}"
        ></button>
      {% endfor %}
    </div>

    <button
      class="ai-carousel-button-{{ ai_gen_id }} ai-carousel-next-{{ ai_gen_id }}"
      aria-label="Next slide"
    >
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="9 18 15 12 9 6"></polyline>
      </svg>
    </button>
  </div>
</image-text-carousel-{{ ai_gen_id }}>

<script>
  (function() {
    class ImageTextCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.totalSlides = 6;
      }

      connectedCallback() {
        this.slidesContainer = this.querySelector('.ai-carousel-slides-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-carousel-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-carousel-next-{{ ai_gen_id }}');
        this.dots = this.querySelectorAll('.ai-carousel-dot-{{ ai_gen_id }}');

        this.setupEventListeners();
        
        if ({{ block.settings.autoplay }}) {
          this.startAutoplay();
        }
      }

      setupEventListeners() {
        this.prevButton.addEventListener('click', () => this.goToPrevSlide());
        this.nextButton.addEventListener('click', () => this.goToNextSlide());

        this.dots.forEach((dot, index) => {
          dot.addEventListener('click', () => this.goToSlide(index));
        });
      }

      goToSlide(index) {
        this.currentSlide = index;
        this.updateCarousel();
        this.resetAutoplay();
      }

      goToNextSlide() {
        this.currentSlide = (this.currentSlide + 1) % this.totalSlides;
        this.updateCarousel();
        this.resetAutoplay();
      }

      goToPrevSlide() {
        this.currentSlide = (this.currentSlide - 1 + this.totalSlides) % this.totalSlides;
        this.updateCarousel();
        this.resetAutoplay();
      }

      updateCarousel() {
        const offset = -this.currentSlide * 100;
        this.slidesContainer.style.transform = `translateX(${offset}%)`;

        this.dots.forEach((dot, index) => {
          if (index === this.currentSlide) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      }

      startAutoplay() {
        this.autoplayInterval = setInterval(() => {
          this.goToNextSlide();
        }, {{ block.settings.autoplay_speed }} * 1000);
      }

      resetAutoplay() {
        if ({{ block.settings.autoplay }}) {
          clearInterval(this.autoplayInterval);
          this.startAutoplay();
        }
      }

      disconnectedCallback() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
        }
      }
    }

    customElements.define('image-text-carousel-{{ ai_gen_id }}', ImageTextCarousel{{ ai_gen_id }});
  })();
</script>

