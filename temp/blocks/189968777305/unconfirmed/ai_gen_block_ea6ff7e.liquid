{% doc %}
  @prompt
    3 youtube videos next to eachother - allow users to click to play one of they want to see. Each video has a small title over it.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-youtube-videos-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
  }

  .ai-youtube-videos__container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.gap }}px;
  }

  .ai-youtube-videos__item-{{ ai_gen_id }} {
    position: relative;
    cursor: pointer;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
    background-color: #000000;
  }

  .ai-youtube-videos__wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%;
    overflow: hidden;
  }

  .ai-youtube-videos__thumbnail-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.3s ease;
  }

  .ai-youtube-videos__item-{{ ai_gen_id }}:hover .ai-youtube-videos__thumbnail-{{ ai_gen_id }} {
    opacity: 0.8;
  }

  .ai-youtube-videos__iframe-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
  }

  .ai-youtube-videos__play-button-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: {{ block.settings.play_button_size }}px;
    height: {{ block.settings.play_button_size }}px;
    background-color: {{ block.settings.play_button_color }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease, background-color 0.3s ease;
    pointer-events: none;
    z-index: 2;
  }

  .ai-youtube-videos__item-{{ ai_gen_id }}:hover .ai-youtube-videos__play-button-{{ ai_gen_id }} {
    transform: translate(-50%, -50%) scale(1.1);
    background-color: {{ block.settings.play_button_hover_color }};
  }

  .ai-youtube-videos__play-icon-{{ ai_gen_id }} {
    width: 0;
    height: 0;
    border-left: {{ block.settings.play_button_size | divided_by: 3 }}px solid {{ block.settings.play_icon_color }};
    border-top: {{ block.settings.play_button_size | divided_by: 4 }}px solid transparent;
    border-bottom: {{ block.settings.play_button_size | divided_by: 4 }}px solid transparent;
    margin-left: {{ block.settings.play_button_size | divided_by: 12 }}px;
  }

  .ai-youtube-videos__title-{{ ai_gen_id }} {
    position: absolute;
    top: {{ block.settings.title_spacing }}px;
    left: {{ block.settings.title_spacing }}px;
    right: {{ block.settings.title_spacing }}px;
    background-color: {{ block.settings.title_background_color }};
    color: {{ block.settings.title_text_color }};
    padding: {{ block.settings.title_padding }}px;
    font-size: {{ block.settings.title_font_size }}px;
    font-weight: 600;
    border-radius: {{ block.settings.title_border_radius }}px;
    z-index: 1;
    pointer-events: none;
  }

  .ai-youtube-videos__item-{{ ai_gen_id }}.playing .ai-youtube-videos__thumbnail-{{ ai_gen_id }},
  .ai-youtube-videos__item-{{ ai_gen_id }}.playing .ai-youtube-videos__play-button-{{ ai_gen_id }},
  .ai-youtube-videos__item-{{ ai_gen_id }}.playing .ai-youtube-videos__title-{{ ai_gen_id }} {
    opacity: 0;
    pointer-events: none;
  }

  @media screen and (max-width: 989px) {
    .ai-youtube-videos__container-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-youtube-videos__container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }
  }
{% endstyle %}

<youtube-videos-{{ ai_gen_id }} class="ai-youtube-videos-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-youtube-videos__container-{{ ai_gen_id }}">
    {% for i in (1..3) %}
      {% liquid
        assign video_url_key = 'video_' | append: i | append: '_url'
        assign video_title_key = 'video_' | append: i | append: '_title'
        assign video_url = block.settings[video_url_key]
        assign video_title = block.settings[video_title_key]
      %}

      {% if video_url != blank %}
        {% assign video_id = video_url | split: 'v=' | last | split: '&' | first %}
        {% if video_id == video_url %}
          {% assign video_id = video_url | split: 'youtu.be/' | last | split: '?' | first %}
        {% endif %}

        <div class="ai-youtube-videos__item-{{ ai_gen_id }}" data-video-id="{{ video_id }}">
          <div class="ai-youtube-videos__wrapper-{{ ai_gen_id }}">
            <img
              class="ai-youtube-videos__thumbnail-{{ ai_gen_id }}"
              src="https://img.youtube.com/vi/{{ video_id }}/maxresdefault.jpg"
              alt="{{ video_title | escape }}"
              loading="lazy"
            >
            <div class="ai-youtube-videos__play-button-{{ ai_gen_id }}">
              <div class="ai-youtube-videos__play-icon-{{ ai_gen_id }}"></div>
            </div>
            {% if video_title != blank %}
              <div class="ai-youtube-videos__title-{{ ai_gen_id }}">{{ video_title }}</div>
            {% endif %}
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</youtube-videos-{{ ai_gen_id }}>

<script>
  (function() {
    class YoutubeVideos{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.videoItems = this.querySelectorAll('.ai-youtube-videos__item-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.videoItems.forEach((item) => {
          item.addEventListener('click', () => {
            this.playVideo(item);
          });
        });
      }

      playVideo(item) {
        const videoId = item.dataset.videoId;
        const wrapper = item.querySelector('.ai-youtube-videos__wrapper-{{ ai_gen_id }}');

        const iframe = document.createElement('iframe');
        iframe.className = 'ai-youtube-videos__iframe-{{ ai_gen_id }}';
        iframe.src = `https://www.youtube.com/embed/${videoId}?autoplay=1&rel=0`;
        iframe.allow = 'accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture';
        iframe.allowFullscreen = true;

        wrapper.appendChild(iframe);
        item.classList.add('playing');
      }
    }

    customElements.define('youtube-videos-{{ ai_gen_id }}', YoutubeVideos{{ ai_gen_id }});
  })();
</script>

