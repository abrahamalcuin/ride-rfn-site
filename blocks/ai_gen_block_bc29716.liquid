{% doc %}
  @prompt
    3 youtube videos next to each other with a title above each, center the titles
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-youtube-videos-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
  }

  .ai-youtube-videos-container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.gap }}px;
  }

  .ai-youtube-video-item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.title_spacing }}px;
  }

  .ai-youtube-video-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0;
    text-align: {{ block.settings.title_alignment }};
  }

  .ai-youtube-video-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%;
    height: 0;
    overflow: hidden;
    background-color: #000000;
    border-radius: {{ block.settings.video_border_radius }}px;
  }

  .ai-youtube-video-wrapper-{{ ai_gen_id }} iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
    border-radius: {{ block.settings.video_border_radius }}px;
  }

  @media screen and (max-width: 749px) {
    .ai-youtube-videos-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.gap | times: 0.75 }}px;
    }
  }
{% endstyle %}

<youtube-videos-{{ ai_gen_id }}
  class="ai-youtube-videos-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-youtube-videos-container-{{ ai_gen_id }}">
    {% for i in (1..3) %}
      {% liquid
        assign video_url_key = 'video_url_' | append: i
        assign video_title_key = 'video_title_' | append: i
        assign video_url = block.settings[video_url_key]
        assign video_title = block.settings[video_title_key]
      %}

      <div class="ai-youtube-video-item-{{ ai_gen_id }}">
        {% if video_title != blank %}
          <h3 class="ai-youtube-video-title-{{ ai_gen_id }}">{{ video_title }}</h3>
        {% endif %}

        <div class="ai-youtube-video-wrapper-{{ ai_gen_id }}">
          {% if video_url != blank %}
            <iframe
              src="https://www.youtube.com/embed/{{ video_url }}"
              title="{{ video_title | escape }}"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
              loading="lazy"
            ></iframe>
          {% else %}
            <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); color: #666; text-align: center; padding: 20px;">
              Add YouTube video ID for video {{ i }}
            </div>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</youtube-videos-{{ ai_gen_id }}>

<script>
  (function() {
    class YoutubeVideos{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
      }
    }

    customElements.define('youtube-videos-{{ ai_gen_id }}', YoutubeVideos{{ ai_gen_id }});
  })();
</script>

