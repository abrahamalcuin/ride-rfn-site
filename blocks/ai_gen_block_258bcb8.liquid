{% doc %}
  @prompt
    A footer section with 3 links on the left hand side: Contact Us, About Us, and Dealer Application. These links should be white and when hovered over the link becomes underlined. 
    On the left hand side, add in a photo for a logo., add in text at the bottom that says "© 2025 KICKIN BIKES LLC", Keep everything on the left the same. it's good. On the right, remove the blank image and add in an image for me to upload my logo to.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-footer-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
  }

  .ai-footer-container-{{ ai_gen_id }} {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-footer-top-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 40px;
    margin-bottom: {{ block.settings.copyright_spacing }}px;
  }

  .ai-footer-links-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.link_spacing }}px;
    flex-wrap: wrap;
  }

  .ai-footer-link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    text-decoration: none;
    font-size: {{ block.settings.link_font_size }}px;
    transition: text-decoration 0.2s ease;
  }

  .ai-footer-link-{{ ai_gen_id }}:hover {
    text-decoration: underline;
  }

  .ai-footer-logo-{{ ai_gen_id }} {
    flex-shrink: 0;
  }

  .ai-footer-logo-{{ ai_gen_id }} img {
    max-width: {{ block.settings.logo_width }}px;
    height: auto;
    display: block;
  }

  .ai-footer-copyright-{{ ai_gen_id }} {
    color: {{ block.settings.copyright_color }};
    font-size: {{ block.settings.copyright_font_size }}px;
    text-align: {{ block.settings.copyright_alignment }};
  }

  @media screen and (max-width: 749px) {
    .ai-footer-top-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: flex-start;
      gap: 24px;
    }

    .ai-footer-links-{{ ai_gen_id }} {
      flex-direction: column;
      gap: 16px;
    }

    .ai-footer-logo-{{ ai_gen_id }} {
      order: -1;
    }

    .ai-footer-copyright-{{ ai_gen_id }} {
      text-align: left;
    }
  }
{% endstyle %}

<div class="ai-footer-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-footer-container-{{ ai_gen_id }}">
    <div class="ai-footer-top-{{ ai_gen_id }}">
      <nav class="ai-footer-links-{{ ai_gen_id }}" aria-label="Footer navigation">
        {% if block.settings.link_1_text != blank %}
          <a href="{{ block.settings.link_1_url }}" class="ai-footer-link-{{ ai_gen_id }}">
            {{ block.settings.link_1_text }}
          </a>
        {% endif %}
        {% if block.settings.link_2_text != blank %}
          <a href="{{ block.settings.link_2_url }}" class="ai-footer-link-{{ ai_gen_id }}">
            {{ block.settings.link_2_text }}
          </a>
        {% endif %}
        {% if block.settings.link_3_text != blank %}
          <a href="{{ block.settings.link_3_url }}" class="ai-footer-link-{{ ai_gen_id }}">
            {{ block.settings.link_3_text }}
          </a>
        {% endif %}
        {% if block.settings.link_4_text != blank %}
          <a href="{{ block.settings.link_4_url }}" class="ai-footer-link-{{ ai_gen_id }}">
            {{ block.settings.link_4_text }}
          </a>
        {% endif %}
        {% if block.settings.link_5_text != blank %}
          <a href="{{ block.settings.link_5_url }}" class="ai-footer-link-{{ ai_gen_id }}">
            {{ block.settings.link_5_text }}
          </a>
        {% endif %}
      </nav>

      {% if block.settings.logo %}
        <div class="ai-footer-logo-{{ ai_gen_id }}">
          <img
            src="{{ block.settings.logo | image_url: width: 400 }}"
            alt="{{ block.settings.logo.alt | default: shop.name | escape }}"
            width="{{ block.settings.logo.width }}"
            height="{{ block.settings.logo.height }}"
            loading="lazy"
          >
        </div>
      {% endif %}
    </div>

    <div class="ai-footer-copyright-{{ ai_gen_id }}">
      {{ block.settings.copyright_text }}
    </div>
  </div>
</div>

