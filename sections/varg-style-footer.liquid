{% comment %}
  Recreates the VARG footer layout shown in the provided reference.
  Each column is a block that pulls links from a selected navigation menu.
{% endcomment %}

{%- liquid
  assign bg_color = section.settings.background_color
  assign heading_color = section.settings.heading_color
  assign text_color = section.settings.link_color
  assign hover_color = section.settings.link_hover_color
  assign border_color = section.settings.border_color
  assign heading_font = section.settings.heading_font_family
  if heading_font == blank
    assign heading_font = 'var(--font-heading-family, var(--font-body-family))'
  endif
  assign heading_opacity_setting = section.settings.heading_opacity
  if heading_opacity_setting == blank
    assign heading_opacity_setting = 80
  endif
  assign heading_opacity = heading_opacity_setting | times: 0.01
  assign heading_font_size = section.settings.heading_font_size | default: 14
  assign heading_letter_spacing = section.settings.heading_letter_spacing | default: 3
  assign link_font = section.settings.link_font_family
  if link_font == blank
    assign link_font = 'var(--font-body-family, var(--font-heading-family))'
  endif
  assign link_font_size = section.settings.link_font_size | default: 15
  assign link_letter_spacing = section.settings.link_letter_spacing | default: 0
  assign link_opacity_setting = section.settings.link_opacity
  if link_opacity_setting == blank
    assign link_opacity_setting = 100
  endif
  assign link_opacity = link_opacity_setting | times: 0.01
-%}

{%- style -%}
  .section-{{ section.id }} {
    background-color: {{ bg_color }};
    border-top: 1px solid {{ border_color }};
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .section-{{ section.id }} .varg-footer__inner {
    max-width: var(--page-width, 120rem);
    margin: 0 auto;
    text-align: center;
  }

  .section-{{ section.id }} .varg-footer__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: clamp(1.5rem, 3vw, 3.25rem);
    justify-content: center;
    justify-items: center;
  }

  .section-{{ section.id }} .varg-footer__column {
    text-align: center;
  }

  .section-{{ section.id }} .varg-footer__heading {
    margin: 0 0 1.4rem;
    font-family: {{ heading_font }};
    font-weight: 600;
    font-size: {{ heading_font_size }}px;
    letter-spacing: {{ heading_letter_spacing }}px;
    text-transform: uppercase;
    color: {{ heading_color }};
    opacity: {{ heading_opacity }};
  }

  .section-{{ section.id }} .varg-footer__menu {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    align-items: center;
  }

  .section-{{ section.id }} .varg-footer__link {
    color: {{ text_color }};
    text-decoration: none;
    font-family: {{ link_font }};
    font-size: {{ link_font_size }}px;
    letter-spacing: {{ link_letter_spacing }}px;
    line-height: 1.45;
    transition: color 150ms ease;
    opacity: {{ link_opacity }};
  }

  .section-{{ section.id }} .varg-footer__link:hover,
  .section-{{ section.id }} .varg-footer__link:focus {
    color: {{ hover_color }};
  }

  .section-{{ section.id }} .varg-footer__description {
    color: {{ text_color }};
    margin: 0;
    font-size: 0.95rem;
    line-height: 1.45;
  }
{%- endstyle -%}

<section class="section-{{ section.id }}" data-section-type="varg-style-footer">
  <div class="varg-footer__inner page-width">
    <div class="varg-footer__grid">
      {%- for block in section.blocks -%}
        <div class="varg-footer__column" {{ block.shopify_attributes }}>
          {%- if block.settings.heading != blank -%}
            <p class="varg-footer__heading">{{ block.settings.heading | escape }}</p>
          {%- endif -%}

          {%- if block.type == 'link_column' and block.settings.menu != blank -%}
            <ul class="varg-footer__menu" role="list">
              {%- for link in block.settings.menu.links -%}
                <li>
                  <a class="varg-footer__link" href="{{ link.url }}">
                    {{ link.title | escape }}
                  </a>
                </li>
              {%- endfor -%}
            </ul>
          {%- elsif block.type == 'text_column' and block.settings.text != blank -%}
            <div class="varg-footer__description rte">
              {{ block.settings.text }}
            </div>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

