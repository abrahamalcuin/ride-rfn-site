{% comment %}
  Recreates the VARG footer layout shown in the provided reference.
  Each column is a block that pulls links from a selected navigation menu.
{% endcomment %}

{%- liquid
  assign bg_color = section.settings.background_color
  assign heading_color = section.settings.heading_color
  assign text_color = section.settings.link_color
  assign hover_color = section.settings.link_hover_color
  assign border_color = section.settings.border_color
-%}

{%- style -%}
  .section-{{ section.id }} {
    background-color: {{ bg_color }};
    border-top: 1px solid {{ border_color }};
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .section-{{ section.id }} .varg-footer__inner {
    max-width: var(--page-width, 120rem);
    margin: 0 auto;
  }

  .section-{{ section.id }} .varg-footer__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: clamp(1.5rem, 3vw, 3.25rem);
  }

  .section-{{ section.id }} .varg-footer__heading {
    margin: 0 0 1.4rem;
    font-family: var(--font-heading-family, var(--font-body-family));
    font-weight: 600;
    font-size: 0.85rem;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    color: {{ heading_color }};
  }

  .section-{{ section.id }} .varg-footer__menu {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .section-{{ section.id }} .varg-footer__link {
    color: {{ text_color }};
    text-decoration: none;
    font-size: 0.95rem;
    line-height: 1.45;
    transition: color 150ms ease;
  }

  .section-{{ section.id }} .varg-footer__link:hover,
  .section-{{ section.id }} .varg-footer__link:focus {
    color: {{ hover_color }};
  }

  .section-{{ section.id }} .varg-footer__description {
    color: {{ text_color }};
    margin: 0;
    font-size: 0.95rem;
    line-height: 1.45;
  }
{%- endstyle -%}

<section class="section-{{ section.id }}" data-section-type="varg-style-footer">
  <div class="varg-footer__inner page-width">
    <div class="varg-footer__grid">
      {%- for block in section.blocks -%}
        <div class="varg-footer__column" {{ block.shopify_attributes }}>
          {%- if block.settings.heading != blank -%}
            <p class="varg-footer__heading">{{ block.settings.heading | escape }}</p>
          {%- endif -%}

          {%- if block.type == 'link_column' and block.settings.menu != blank -%}
            <ul class="varg-footer__menu" role="list">
              {%- for link in block.settings.menu.links -%}
                <li>
                  <a class="varg-footer__link" href="{{ link.url }}">
                    {{ link.title | escape }}
                  </a>
                </li>
              {%- endfor -%}
            </ul>
          {%- elsif block.type == 'text_column' and block.settings.text != blank -%}
            <div class="varg-footer__description rte">
              {{ block.settings.text }}
            </div>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "VARG style footer",
  "tag": "section",
  "class": "section",
  "max_blocks": 6,
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background",
      "default": "#030303"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Separator line",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading text",
      "default": "#9e9e9e"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Link text",
      "default": "#f0f0f0"
    },
    {
      "type": "color",
      "id": "link_hover_color",
      "label": "Link hover",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 44
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 44
    }
  ],
  "blocks": [
    {
      "type": "link_column",
      "name": "Link column",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Column heading"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu",
          "info": "Choose any navigation menu to populate this column."
        }
      ]
    },
    {
      "type": "text_column",
      "name": "Text column",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Add any supporting text here.</p>"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "link_column",
        "settings": {
          "heading": "Varg"
        }
      },
      {
        "type": "link_column",
        "settings": {
          "heading": "Company"
        }
      },
      {
        "type": "link_column",
        "settings": {
          "heading": "Support"
        }
      },
      {
        "type": "link_column",
        "settings": {
          "heading": "Account"
        }
      }
    ]
  },
  "presets": [
    {
      "name": "VARG style footer",
      "category": "Footer"
    }
  ]
}
{% endschema %}
